<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.bbqresearch.roomwordsample">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.bbqresearch.dsc.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.bbqresearch.dsc.ScanningActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="io.bbqresearch.dsc.NewWordActivity" />
        <activity
            android:name="io.bbqresearch.dsc.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <service
            android:name="io.bbqresearch.dsc.service.DscService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="io.bbqresearch.dsc.ScanningActivityCruft"
            android:label="@string/title_activity_scanning"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>